{
  "name": "zookeeper",
  "json_class": "Chef::Role",
  "chef_type": "role",
  "description": "Recipes which configures host to be zookeeper hosts",
  "default_attributes": {
      "zookeeper":{
        "heap_memory": "1g"
      }

  },
  "override_attributes": {

  },
  "run_list": [
    "role[_base]"
  ],
  "env_run_lists": {
    "qa":[
      "role[_base]",
      "role[_elk-agent]",
      "recipe[basic-essentials::oracle_java_default]",
      "recipe[zookeeper::install]",
      "recipe[zookeeper::configure]",
      "recipe[zookeeper::service]"
    ]

  }
}
