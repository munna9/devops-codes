#<%node['phenom']['banner']%>

upstream elasticsearch {
  server <%=node['elasticsearch']['service']['host']%>:<%=node['elasticsearch']['service']['port']%>;
  keepalive 15;
}
server {
  listen <%=node['elasticsearch']['server_port']%>;
  server_name <%=node['elasticsearch']['server_name']%>;
  location / {
    proxy_http_version 1.1;
    proxy_set_header Connection "Keep-Alive";
    proxy_set_header Proxy-Connection "Keep-Alive";
    limit_except DELETE  {
      proxy_pass http://elasticsearch;
    }
    proxy_redirect off;
  }
}
