#<%=node['phenom']['banner']%>
systemLog:
  destination: file
  logRotate: rename
  path: <%=node['mongodb']['log']['file']%>
storage:
  dbPath: <%=node['mongodb']['storage']['path']%>
  journal:
    enabled: true
  directoryPerDB: true
processManagement:
  fork: true
  pidFilePath: /var/run/mongodb/mongod.pid
net:
  port: 27017
<% if node['mongodb']['major']['version']=='3.4' %>
  compression:
        compressors: snappy
<% end %>
operationProfiling:
    slowOpThresholdMs: 100
    mode: slowOp
<% if node['mongodb']['key_authentication'] %>
security:
    authorization: enabled
    keyFile: <%=node['mongodb']['app']['key_file']%>
<% end %>
<% if node['mongodb']['replication_name'] %>
replication:
    replSetName: <%=node['mongodb']['replication_name']%>
<% end %>