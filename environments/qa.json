{
  "name": "qa",
  "json_class": "Chef::Environment",
  "chef_type": "environment",
  "description": "QA environment specfication file",

  "cookbook_versions": {
    "mongodb" : "0.1.8"
  },

  "default_attributes": {
    "elk_cluster_name"  : "elkcluster"
  },

  "override_attributes": {
    "elasticsearch":{
      "server_name": "qa-elasticsearch.aws.phenom.local",
      "server_port": 9200,
      "package":{
        "version": "5.4.1-1"
      },
      "nginx":{
        "shield": true
      }
    },
    "logstash": {
      "server_name": "qa-logstash01.aws.phenom.local",
      "server_port": "5004",
      "certificate_name": "qacert"
    },
    "kafka_events": {
      "elasticsearch": {
        "server_name": "qa-elasticsearch.aws.phenom.local",
        "server_port": 9200        
      }
    },
    "mongodb":{
      "replication_name":"rsQA",
      "key_authentication":true,
      "major":{
        "version": "3.4"
      }
    },
    "kafka":{
      "cluster": ["qa-kafka01", "qa-kafka02", "qa-kafka03"]
    },
    "zookeeper":{
      "cluster": ["qa-kafka01", "qa-kafka02", "qa-kafka03"]
    }
  }
}
