{
  "name": "prod-candidatesca",
  "json_class": "Chef::Environment",
  "chef_type": "environment",
  "description": "PRD environment specfication file for Candidates",

  "cookbook_versions": {
    "nginx":"0.1.8",
    "mongodb": "0.1.7"

  },

  "default_attributes": {
    "mongodb":{
      "replication_name": "rs_CAND_CA",
      "key_authentication": true
    },
    "elasticsearch":{
      "server_port":9200
    },
    "es_cluster_name"   : "PROD_CAND_CA"
  },

  "override_attributes": {
    "elasticsearch":{
      "package":{
        "version": "2.3.5"
      }
    },
    "mongodb":{
      "major":{
        "version": '3.2'
      }
    }
  }
}
