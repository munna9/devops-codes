{
  "id": "dev-candmongo",
  "app_files_to_watch": {
    "mongodb": {
      "document_type": "preprod-mongo-candidates",
      "paths": [
        "/var/log/mongodb/mongod.log"
      ],
      "input_type": "log",
      "close_inactive": "5m",
      "symlink": "enabled",
      "tail-files": true,
      "multiline.pattern": "^[[:digit:]]{4}-[[:digit:]]{2}-[[:digit:]]{2}",
      "multiline.negate": true,
      "multiline.match": "after"
    },
    "elasticsearch": {
      "document_type": "preprod-es-candidates",
      "paths": [
        "/opt/deployment/elasticsearch/logs/elasticsearch*.log"
      ],
      "input_type": "log",
      "close_inactive": "5m",
      "symlink": "enabled",
      "tail-files": true
    }
  },
  "app_procs_to_watch": {
    "mongo_candidate": {
      "module": "mongodb",
      "metricsets": [
        "status"
      ],
      "ports": ["27017"],
      "username": "monitor",
      "password": "jAS#@$876smbh"
    }
  },
  "grok_patterns": {
    "preprod-mongo-candidates": {
      "grok_pattern": ["MONGO3_CONNECTION_COUNT", "MONGO_SLOWQUERY"],
      "custom_patterns": true,
      "overwrite" : false
    }
  }
}
